
{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, {"SwitchCase":  1}],
    "max-len": ["error", { "code": 120 }],
    "require-jsdoc": "off",
    "sort-keys-fix/sort-keys-fix": "warn",
    "valid-jsdoc": "off",
    "no-invalid-this": "off",
    "no-unused-vars": "warn",
    "new-cap": "warn",
    "no-underscore-dangle": "off",
    "padding-line-between-statements": [
      "error",
      { "blankLine": "always", "prev": "*", "next": "return" }
    ],
    "newline-after-var": ["off", "always"],
    "quotes": [2, "single", { "avoidEscape": true }]
  },
  "parser": "babel-eslint",
  "plugins": [
    "sort-keys-fix"
  ],
  "globals": {
    "test": false,
    "expect": false,
    "describe": false,
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  }
}